<script type="text/javascript">
    // set iframe url on click
    $j('.zoom-image').on('click', function(){
        var image = $j(this).data("image");
        var zoom = $j('#zoom-window img');
        $j(zoom).attr('src', image);
        $j('.product-view').addClass('zoomed');
    })
    $j('#zoom-window img, .zoom-close').on('click', function(){
        $j('.product-view').removeClass('zoomed');
        $j('#zoom-window img').attr('src','');
    })
</script>